// Exemplo: controle de oxigênio com log e espera
// Se o nível de oxigênio estiver baixo, ajusta e loga a evolução.

if (oxigenio < 95) {
  ajustar_O2(70);     // aumenta a oferta de oxigênio
  esperar(5);         // aguarda estabilização
  log(oxigenio);      // mostra saturação atual
  alerta();           // mostra FC, pois saturação pode alterar batimento
} else {
  log(oxigenio);      // se já está bom, só registra
  silenciar();        // não faz nada além de registrar
}
